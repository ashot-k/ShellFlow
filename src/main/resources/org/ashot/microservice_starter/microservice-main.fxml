                     <children>
                        <Slider fx:id="delayPerCmd" majorTickUnit="2.0" max="20.0" minorTickCount="1" prefHeight="40.0" prefWidth="200.0" showTickLabels="true" showTickMarks="true" snapToTicks="true" />
